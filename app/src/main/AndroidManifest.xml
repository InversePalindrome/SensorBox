<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inversepalindrome.sensorbox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity
            android:name=".MainActivity"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CompassActivity"
            android:label="Compass"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AccelerometerActivity"
            android:label="Accelerometer" />
        <activity android:name=".EnvironmentActivity" android:label="Environment"/>
        <activity android:name=".GyroscopeActivity" android:label="Gyroscope"></activity>
    </application>

</manifest>